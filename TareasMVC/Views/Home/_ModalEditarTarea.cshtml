

<div class="modal fade" id="modal-editar-tarea" tabindex="-1">
    <div class="modal-dialog modal-dialogmodal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-tarea-titulo" data-bind="text: titulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="txtTituloCrearTarea" placeholder="titulo" data-bind="value: titulo,event: {change:manejarCambioEditarTarea}" autocomplete="off" />
                            <label for="txtTituloCrearTarea">Titulo de la tarea</label>
                        </div>
                        <div class="mb-3">
                            <label>Descripción</label>
                            <textarea type="text" class="form-control" rows="4" data-bind="value: descripcion, event: {change:manejarCambioEditarTarea}"></textarea>
                        </div>
                        <div class="mb-3">
                            <partial name="_Pasos" />
                        </div>
                        <div class="mb-3">
                            <partial name="_ArchivosAdjuntos" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <button class="btn btn-secondary mb-2 w-100 text-start" data-bind="{click: intentarBorrarTarea}">
                            <i class="bi bi-x-lg"></i>
                            Borrar tarea
                        </button>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

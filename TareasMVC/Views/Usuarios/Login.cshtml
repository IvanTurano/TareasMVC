@model LoginViewModel
@{
    ViewData["title"] = "Login";
}

<div class="contenedor-principal-usuarios">
    <h1>Login</h1>

    @if (ViewData.Keys.Contains("mensaje"))
    {
        <p style="color:red">
            @ViewData["mensaje"];
        </p>
    }

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Recuerdame" class="form-check-input" type="checkbox" />
                <label asp-for="Recuerdame" class="form-check-label"></label>
            </div>

            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="Registro">Crear una cuenta</a>

            <a class="btn btn-success" asp-action="LoginExterno" asp-route-proveedor="Microsoft">
                Continuar con Microsoft
            </a>
        </form>
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}